NODE_ENV=dev
PORT=8080

# PostgreSQL – substitua usuario, senha e nome_do_banco pelos valores reais
# Ex.: Docker: postgresql://docker:senha@localhost:5432/apisaloonly?schema=public
DATABASE_URL="postgresql://usuario:senha@localhost:5432/nome_do_banco?schema=public"

# Auth (gere segredos fortes em produção)
JWT_SECRET=your-jwt-secret-min-32-chars
COOKIE_SECRET=your-cookie-secret-min-32-chars

# Recuperação de senha: URL do frontend para montar o link (ex.: https://app.saloonly.com)
FRONTEND_URL=http://localhost:5173
